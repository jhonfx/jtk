<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.testdriven.jtk</groupId>
	<artifactId>jtk</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>JTK</name>
	<description>Java Test Killer is a source code quality product that verifies if all test methods contain assertions.</description>
	<url>http://jtk.testdriven.org</url>
	<scm>
		<url>https://bitbucket.org/padcom/jtk/</url>
	</scm>
	<ciManagement>
		<system>hudson</system>
		<url>http://hudson.testdriven.org/job/jtk</url>
	</ciManagement>
	<issueManagement>
		<system>bitbucket</system>
		<url>http://bitbucket.org/padcom/jtk/issues</url>
	</issueManagement>
	<distributionManagement>
		<repository>
			<id>testdriven-releases</id>
			<name>TestDriven Release Repository</name>
			<url>http://maven.testdriven.org/content/repositories/releases</url>
			<layout>default</layout>
		</repository>
		<snapshotRepository>
			<id>testdriven-snapshots</id>
			<name>TestDriven Snapshots Repository</name>
			<url>http://maven.testdriven.org/content/repositories/snapshots</url>
			<layout>default</layout>
			<uniqueVersion>true</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<profiles>
		<profile>
			<!-- Use this profile to run all tests including integration tests as it would run on integration server -->
			<id>hudson</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>cobertura-maven-plugin</artifactId>
						<version>2.3</version>
						<configuration>
							<formats>
								<format>xml</format>
								<format>html</format>
							</formats>
							<instrumentation>
								<excludes>
									<exclude>**/Main.class</exclude>
									<exclude>**/*Test.class</exclude>
									<exclude>**/testing/*.class</exclude>
									<exclude>**/mocks/*.class</exclude>
								</excludes>
							</instrumentation>
						</configuration>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>cobertura</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>com.thoughtworks.qdox</groupId>
			<artifactId>qdox</artifactId>
			<version>1.10.1</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.easytesting</groupId>
			<artifactId>fest-assert</artifactId>
			<version>1.2</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<version>1.8.3</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<developers>
		<developer>
			<id>padcom</id>
			<name>Matthias Hryniszak</name>
			<email>padcom@gmail.com</email>
			<url>http://padcom13.blogspot.com</url>
			<organization>Aplaline</organization>
			<organizationUrl>http://www.aplaline.com</organizationUrl>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
		<developer>
			<id>kcrimson</id>
			<name>Jarek Palka</name>
			<email>please_update</email>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>
</project>
